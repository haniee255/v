        </div>
    </div>
    <div id="buttonContainer">
        <button class="button" onclick="openSecondPage()">Click me</button>
    </div>

    <!-- Вторая страница -->
    <div id="secondPage">
        <div id="squareContainer">
            <div id="squareText">Нежный текст на второй странице</div>
            <div id="buttonsContainer">
                <button class="button" onclick="openThirdPage()">Next Page</button>
                <button class="button" onclick="showNoText()">Back?</button>
            </div>
        </div>
    </div>

    <!-- Третья страница -->
    <div id="thirdPage">
        <div id="openingBox">
            <div id="boxText">Текст внутри коробки</div>
        </div>
        <div id="backToSecondButtonContainer">
            <button class="button" onclick="goBackToSecondPage()">Back to Second Page</button>
        </div>
    </div>

    <script>
        function openSecondPage() {
            // Скрываем первую страницу
            document.getElementById('heartContainer').style.display = 'none';
            document.getElementById('buttonContainer').style.display = 'none';

            // Показываем вторую страницу
            document.getElementById('secondPage').style.display = 'flex';
        }

        function openThirdPage() {
            // Скрываем вторую страницу
            document.getElementById('secondPage').style.display = 'none';

            // Показываем третью страницу
            document.getElementById('thirdPage').style.display = 'flex';
        }

        function showNoText() {
            // Показываем текст в маленьком квадрате с котиком
            var noTextContainer = document.createElement("div");
            noTextContainer.id = "noTextContainer";
            noTextContainer.style.background = "#ffe6f2"; /* Нежно-розовый фон */
            noTextContainer.style.padding = "20px";
            noTextContainer.style.borderRadius = "10px";
            noTextContainer.style.display = "flex";
            noTextContainer.style.flexDirection = "column";
            noTextContainer.style.alignItems = "center";
            noTextContainer.style.justifyContent = "center";
            noTextContainer.style.position = "absolute";
            noTextContainer.style.bottom = "10px";
            noTextContainer.style.width = "100%";

            var noText = document.createElement("div");
            noText.innerHTML = 'NO! please continue ((';
            noText.style.fontSize = "1.5em";
            noText.style.color = "#ff69b4"; /* Розовый цвет текста */
            noText.style.fontWeight = "bold";
            noTextContainer.appendChild(noText);

            var kittenImg = document.createElement("img");
            kittenImg.src = "https://placekitten.com/50/50";
            kittenImg.alt = "Котик";
            kittenImg.style.width = "50px"; /* Уменьшен размер картинки с котиком */
            kittenImg.style.borderRadius = "10px";
            kittenImg.style.marginTop = "10px";
            noTextContainer.appendChild(kittenImg);

            document.body.appendChild(noTextContainer);
        }

        function goBack() {
            // Скрываем вторую страницу
            document.getElementById('secondPage').style.display = 'none';

            // Показываем первую страницу
            document.getElementById('heartContainer').style.display = 'flex';
            document.getElementById('buttonContainer').style.display = 'block';
        }

        function goBackToSecondPage() {
            // Скрываем третью страницу
            document.getElementById('thirdPage').style.display = 'none';

            // Показываем вторую страницу
            document.getElementById('secondPage').style.display = 'flex';
        }
    </script>
</body>
</html>
