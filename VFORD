            height: 100vh;
            flex-direction: column; /* Добавлено для вертикального выравнивания */
        }

        #heartContainer {
            position: relative;
            text-align: center;
        }

        #heart {
            color: red;
            font-size: 5em;
            animation: heartbeat 1s ease-in-out infinite;
        }

        @keyframes heartbeat {
            0%, 100% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.1);
            }
        }

